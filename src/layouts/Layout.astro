---
import "@/assets/fonts/inter/3.19/inter.css";
// import "@/assets/fonts/iosevka/16.3.6/iosevka.css";
import "@/assets/fonts/iosevka-aile/16.3.6/iosevka-aile.css";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="I'm an experienced, certified, and meticulous System Administrator. I do my best work when I'm architecting systems and automating operations."
    />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="bg-[#111] text-zinc-500 flex flex-col justify-center h-screen">
    <main class="px-[5vw] py-6">
      <div
        class="flex flex-col justify-center items-center gap-3 max-w-7xl mx-auto transition"
      >
        <slot />
      </div>
    </main>
  </body>
</html>

