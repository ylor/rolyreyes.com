---
import "@/assets/fonts/inter/3.19/inter.css";
// import "@/assets/fonts/iosevka/16.3.6/iosevka.css";
// import "@/assets/fonts/iosevka-aile/16.3.6/iosevka-aile.css";
import "@/assets/fonts/JetBrainsMono/2.242/JetBrainsMono.css";

const { title = "Roly Reyes", description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="flex h-screen flex-col justify-center bg-[#111] text-zinc-400">
    <main class="px-[5vw] py-6">
      <div
        class="mx-auto flex max-w-7xl flex-col items-center justify-center gap-3 transition"
      >
        <slot />
      </div>
    </main>
  </body>
</html>
